@model IEnumerable<EntityLayer.Concrete.Author>

@{
    ViewBag.Title = "StatusPassiveToList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<link href="~/admin/css/bootstrap.min.css" rel="stylesheet" />

