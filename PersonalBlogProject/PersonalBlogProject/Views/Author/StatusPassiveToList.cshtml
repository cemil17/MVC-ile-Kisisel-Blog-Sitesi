<!DOCTYPE HTML>
<html>
<head>

    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="~/admin2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/admin2/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/admin2/css/font-awesome.css" rel="stylesheet">
    <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,300,300italic,400italic,700,700italic' rel='stylesheet' type='text/css'>
    <link href="~/admin2/css/animate.css" rel="stylesheet" type="text/css" media="all">

</head>

<body>
    <div>
        <h3 style="color:#000000">Kaldırılan Yazarlar</h3>
        <br />
        <br />
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <h4 class="title3">@item.AuthorTitle</h4>
                <div class="profile-top">
                    <img src="@item.Image" height="150" width="150" alt="">
                    <h4>@item.Name</h4>
                    <h5>@item.AuthorAbout</h5>
                </div>
                <div class="profile-text">
                    <div class="profile-row">
                        <div class="profile-left">
                            <i class="fa fa-envelope profile-icon"></i>
                        </div>
                        <div class="profile-right">
                            <h4>@item.Mail </h4>
                            <p>Mail</p>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="profile-row row-middle">
                        <div class="profile-left">
                            <i class="fa fa-mobile profile-icon"></i>
                        </div>
                        <div class="profile-right">
                            <h4>@item.PhoneNumber</h4>
                            <p>Telefon</p>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="profile-row">
                        <div class="profile-left">
                            <i class="fa fa-file-text profile-icon"></i>
                        </div>
                        <div class="profile-right">
                            <h4>@item.ShortAbout</h4>
                            <p>Yetenek</p>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="profile-btm">
                    <a href="/Author/ActiveAuthor/@item.AuthorID" class="btn btn-info">Aktif Yap</a>
                </div>
                <br />
                <br />
            </div>

        }
    </div>

    <br />
    <br />
    <br />

</body>
</html>


