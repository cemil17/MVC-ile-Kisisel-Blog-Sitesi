@model IEnumerable<EntityLayer.Concrete.Author>


<div class="active tab-pane" style="color:#000000" id="settings">
    @using (Html.BeginForm("UserInfoUpdate", "User", FormMethod.Post))
    {
        foreach (var item in Model)
        {
    <form class="form-horizontal">
        <div class="form-group row">
            <div class="col-sm-10">
                <input type="hidden" class="form-control" name="AuthorID" value="@item.AuthorID">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Name" value="@item.Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Unvan</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorTitle" value="@item.AuthorTitle">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Resim Yolu</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Image" value="@item.Image">
            </div>
        </div>        
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Telefon Numaram</label>
            <div class="col-sm-10">
                <input type="tel" class="form-control" name="PhoneNumber" value="@item.PhoneNumber">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">İçerik Alanlarım </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="ShortAbout" value="@item.ShortAbout">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Mail</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="Mail" value="@item.Mail">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="Password" value="@item.Password">
            </div>
        </div>
        
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Hakkımda</label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="7" name="AuthorAbout">@item.AuthorAbout</textarea>
            </div>
        </div>        
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button class="btn btn-warning">Güncelle</button>
            </div>
        </div>
    </form>
        }
    }
</div>